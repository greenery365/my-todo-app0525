{
  "name": "Code Analysis Bot",
  "description": "Automated code analysis for pull requests and commits",
  "url": "https://github.com",
  "hook_attributes": {
    "url": "https://your-webhook-url.com/webhook"
  },
  "redirect_url": "https://your-app-url.com/auth/callback",
  "setup_url": "https://your-app-url.com/setup",
  "callback_urls": [
    "https://your-app-url.com/auth/callback"
  ],
  "setup_on_update": true,
  "public": false,
  "default_permissions": {
    "contents": "read",
    "pull_requests": "write",
    "checks": "write",
    "statuses": "write",
    "metadata": "read"
  },
  "default_events": [
    "pull_request",
    "push",
    "check_run",
    "check_suite"
  ]
}